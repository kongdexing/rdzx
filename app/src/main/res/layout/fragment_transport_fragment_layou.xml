<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/transport_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <com.example.ysl.mywps.ui.view.MatchListView
            android:id="@+id/fragment_documents_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/transport_loading"
            android:divider="@color/arrow"
            android:dividerHeight="0.5dp"
            android:scrollbars="none"></com.example.ysl.mywps.ui.view.MatchListView>

    </RelativeLayout>

</ScrollView>