<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mine_item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_8">

    <CheckBox
        android:id="@+id/contact_item_cb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="@drawable/cb_back"
        android:button="@null"
        android:visibility="visible" />

    <com.example.ysl.mywps.ui.view.CircularImageView
        android:id="@+id/imgHead"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:clickable="true"
        android:src="@drawable/abc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_3"
        android:paddingTop="@dimen/dp_3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/contact_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="名称"
                android:textColor="#464646"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/dept_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="#464646"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>

        <TextView
            android:id="@+id/contact_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="[手机号]"
            android:textColor="#868686"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>
</LinearLayout>
