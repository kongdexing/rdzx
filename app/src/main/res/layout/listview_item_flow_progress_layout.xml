<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_back"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"></RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="0.5dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:background="@color/arrow" />


        <RelativeLayout
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/line1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp">

            <ImageView
                android:id="@+id/flow_item_iv_circle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_red" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_centerInParent="true"
                android:background="@drawable/red_solid" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"

            android:layout_below="@+id/circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:background="@color/arrow" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/paddingVertical"
        android:paddingLeft="@dimen/paddingVertical"
        android:paddingTop="@dimen/paddingVertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:id="@+id/flow_item_ll_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.example.ysl.mywps.ui.view.CircularImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:clickable="true"
                    android:src="@drawable/avatar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/flow_tv_leader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:paddingBottom="1dp"
                        android:text="领导-0"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/flow_tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="5dp"
                        android:paddingTop="1dp"
                        android:text="  8 - 24 14 : 24"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_small" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/flow_tv_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dp"
                android:background="@drawable/red_rect"
                android:paddingBottom="@dimen/button_padding_top"
                android:paddingLeft="@dimen/button_padding_left"
                android:paddingRight="@dimen/button_padding_left"
                android:paddingTop="@dimen/button_padding_top"
                android:text="拟文"
                android:textColor="@color/rect_red"
                android:textSize="@dimen/button_nomal" />
        </RelativeLayout>

        <TextView
            android:id="@+id/flow_tv_opinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:text="Lorem lpsum is simply dummy text of the printint and typesetting industry."
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>


</LinearLayout>