<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlNewsItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_2"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/optionImg"
            android:layout_marginRight="@dimen/dp_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:clickable="false"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/text_stay"
                android:text="重磅！国务院常务会决定，全面清理各类证明事项！"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/txtContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:clickable="false"
                android:text="content"
                android:textSize="@dimen/sp_13"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/optionImg"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentRight="true"
            android:background="@drawable/tip_ad_def" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginTop="@dimen/dp_3"
        android:background="@color/arrow" />
</LinearLayout>
