<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlNewsItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/optionImg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_15"
                android:clickable="false"
                android:ellipsize="end"
                android:lines="2"
                android:text="重磅！国务院常务会决定，全面清理各类证明事项！"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社情民意"
                    android:textColor="@color/txt_home_time"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="2018/06/06"
                    android:textColor="@color/txt_home_time"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/optionImg"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentRight="true"
            android:background="@drawable/tip_ad_def" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginBottom="@dimen/dp_1"
        android:background="@color/arrow" />
</LinearLayout>
