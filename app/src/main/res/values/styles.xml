<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tool_bar</item>
        <item name="colorPrimaryDark">@color/tool_bar</item>
        <item name="colorAccent">@color/tool_bar</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowTranslucentStatus"></item>-->
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustNothing</item>
    </style>

    <style name="myprogress" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_layer</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_back</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>

    </style>

    <style name="Popupwindow">
        <item name="android:windowEnterAnimation">@anim/windows_out</item>
        <item name="android:windowExitAnimation">@anim/windows_back</item>
    </style>

    <style name="Popupwindow_top">
        <!--<item name="android:windowEnterAnimation">@anim/window_top_back</item>-->
        <!--<item name="android:windowExitAnimation">@anim/windows_out</item>-->
    </style>

    <style name="mineText">
        <item name="android:textColor">#3C3C3C</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/transparent_gray</item>
        <item name="colorAccent">@color/white_back</item>
    </style>

    <!--带有二级页面的右侧箭头-->
    <style name="arrow_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:src">@drawable/iav</item>
    </style>

</resources>
